---
import Layout from './layouts/BaseLayout.astro'; // If using a global layout
---

<style>
  .contact-section {
    display: flex;
    flex-wrap: wrap;
    background-color: #0b0b0b;
    color: white;
    min-height: 100vh;
    padding: 4rem 2rem;
    font-family: 'Georgia', serif;
  }

  .contact-left,
  .contact-right {
    flex: 1;
    min-width: 300px;
    padding: 2rem;
  }

  .contact-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .contact-left p {
    margin: 1rem 0;
    max-width: 300px;
    line-height: 1.6;
  }

  .contact-left a {
    color: white;
    text-decoration: none;
    margin-right: 1rem;
    font-size: 1.5rem;
  }

  .contact-right {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  form {
    border: 1px solid white;
    padding: 2rem;
    width: 100%;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  input, textarea {
    background: transparent;
    border: none;
    border-bottom: 1px solid white;
    color: white;
    padding: 0.5rem;
    font-size: 1rem;
  }

  input::placeholder,
  textarea::placeholder {
    color: #ccc;
  }

  button {
    background: white;
    color: #0b0b0b;
    padding: 0.75rem;
    border: none;
    font-weight: bold;
    cursor: pointer;
  }

  button:hover {
    background: #ff9776;
    color: white;
  }
</style>

<Layout>
  <section class="contact-section">
    <div class="contact-left">
      <h2>Contact</h2>
      <p>I’m a paragraph. Click here to add your own text and edit me. It's easy.</p>
      <p>info@mysite.com</p>
      <p>123-456-7890</p>
      <div>
        <a href="#"><i class="fab fa-facebook-f">f</i></a>
        <a href="#"><i class="fab fa-instagram">⦿</i></a>
      </div>
    </div>
    <div class="contact-right">
      <form>
        <input type="text" placeholder="First name *" required />
        <input type="text" placeholder="Last name *" required />
        <input type="email" placeholder="Email *" required />
        <input type="text" placeholder="Subject" />
        <textarea rows="4" placeholder="Leave us a message..." required></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  </section>
</Layout>
