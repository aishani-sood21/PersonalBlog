---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
const title = frontmatter?.title ?? 'Untitled Post';
const pubDate = frontmatter?.pubDate ? frontmatter.pubDate.toString().slice(0, 10) : 'Unknown date';
const description = frontmatter?.description ?? '';
const author = frontmatter?.author ?? 'Anonymous';
const imageUrl = frontmatter?.image?.url ?? '';
const imageAlt = frontmatter?.image?.alt ?? 'Post image';
---
<BaseLayout pageTitle={title}>
  <p>{pubDate}</p>
  <p><em>{description}</em></p>
  <p>Written by: {author}</p>
  {imageUrl && <img src={imageUrl} width="300" alt={imageAlt} />}
  <slot />
</BaseLayout>
